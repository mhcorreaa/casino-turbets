{{> header}}


  <body>
    <div class="container container-registro">
      <form action="/pages/perfil.html" method="get">
        <label class="campo-texto-label" for="fullname">Nombre Completo</label>
        <input
          class="campo-texto"
          type="text"
          id="fullname"
          name="fullname"
          placeholder="Ingrese su nombre completo"
          required
        />
        <label class="campo-texto-label" for="username"
          >Nombre de usuario</label
        >
        <input
          class="campo-texto"
          type="text"
          id="username"
          name="username"
          placeholder="Ingrese su nombre de usuario"
          required
        />
        <label class="campo-texto-label" for="email">Correo electrónico</label>
        <input
          class="campo-texto"
          type="email"
          id="email"
          name="email"
          placeholder="Ingrese su correo electrónico"
          required
        />
        <label class="campo-texto-label" for="password">Contraseña</label>
        <input
          class="campo-texto"
          type="password"
          id="password"
          name="password"
          placeholder="Contraseña"
          required
        />
        <label class="campo-texto-label" for="password-confirm"
          >Confirme su contraseña</label
        >
        <input
          class="campo-texto"
          type="password"
          id="password-confirm"
          name="password-confirm"
          placeholder="Escriba nuevamente su contraseña"
          required
        />
        <label class="campo-texto-label" for="fecha-nacimiento"
          >Fecha de nacimiento</label
        >
        <input
          class="campo-texto"
          type="date"
          id="fecha-nacimiento"
          name="fecha-nacimiento"
          placeholder=""
          required
        />
        <button type="submit" class="button registrarse-button">
          Registrarse
        </button>
      </form>
    </div>